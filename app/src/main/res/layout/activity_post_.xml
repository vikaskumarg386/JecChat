<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vikas.jecchat.Post_Activity">

    <include
        android:id="@+id/postToolBar"
        layout="@layout/tool_bar" />

    <ImageView
        android:id="@+id/postImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/timelineUserMessage"
        android:background="@drawable/layout_shape"
        android:scaleType="fitCenter" />

    <EditText
        android:id="@+id/timelineUserMessage"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/addButton"
        android:background="@drawable/layout_shape"
        android:hint="Enter your message"
        android:paddingBottom="60dp"
        android:paddingLeft="5dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="17sp" />

    <ImageButton
        android:id="@+id/addButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/postToolBar"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/textView5"
        android:alpha="0.8"
        app:srcCompat="@drawable/ic_add_black_24dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/timelineUserMessage"
        android:layout_alignTop="@+id/addButton"
        android:text="Add Image"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />


</RelativeLayout>
