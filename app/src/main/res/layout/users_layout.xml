<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/user" />

    <TextView
        android:id="@+id/displayUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/circleImageView2"
        android:layout_marginStart="24dp"
        android:layout_toEndOf="@+id/circleImageView2"
        android:text="Display Name"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/displayUserStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/circleImageView2"
        android:layout_alignStart="@+id/displayUserName"
        android:text="Status"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/onlineIcon"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignBottom="@+id/displayUserName"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/displayUserName"
        android:visibility="invisible"
        app:srcCompat="@drawable/onlineicon" />

</RelativeLayout>